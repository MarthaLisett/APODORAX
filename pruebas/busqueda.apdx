var caracter opcion;
var entero i;
var entero objetivo;
var entero pos;
var bool encontrado;

inicio {
    i = 0;
    encontrado = falso;
    lista[0] = 1;
    lista[1] = 2;
    lista[2] = 3;
    opcion = 'h';

    mientras(opcion != 'v' && opcion != 'i') {
        desplegar("Â¿Quiere buscar valor o indice?[v/i]");
